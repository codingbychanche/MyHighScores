<?xml version="1.0" encoding="utf-8"?>

<!-- This is the layout for one row in our game list list -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <ImageView
        android:id="@+id/gameScreenShoot"
        android:paddingTop="10px"
        android:paddingBottom="5px"
        android:paddingLeft="5px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/calendar"
        android:src="@android:drawable/ic_menu_my_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvDate"
        android:textSize="25px"
        android:textColor="@color/shellText"
        android:textStyle="bold"
        android:paddingLeft="25px"
        android:paddingTop="10px"
        android:layout_toRightOf="@+id/calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/date_played" />

    <TextView
        android:id="@+id/tvGameName"
        android:textSize="25px"
        android:textStyle="bold"
        android:paddingLeft="10px"
        android:paddingTop="10px"
        android:layout_toRightOf="@id/gameScreenShoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_toRightOf="@id/nameOfGame"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_media_play"/>

        <TextView
            android:id="@+id/scoreCount"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20px"
            android:paddingRight="1px"
            android:layout_toLeftOf="@id/arrow"/>

    <TextView
        android:id="@+id/tvHighScore"
        android:textSize="35px"
        android:paddingLeft="10px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvGameName"
        android:layout_toRightOf="@+id/gameScreenShoot"/>

    <TextView
        android:id="@+id/tvComment"
        android:textSize="25px"
        android:textStyle="bold"
        android:textColor="@color/shellText"
        android:paddingLeft="10px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/tvEvaluation"
        android:textSize="25px"
        android:textStyle="bold"
        android:textColor="@color/shellText"
        android:paddingLeft="10px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />


</RelativeLayout>