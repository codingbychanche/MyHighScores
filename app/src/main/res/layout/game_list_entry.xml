<?xml version="1.0" encoding="utf-8"?>

<!-- This is the layout for one row in our game list list -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <ImageView
        android:id="@+id/gameScreenShoot"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:paddingLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvDate"
        android:textSize="12sp"
        android:textStyle="bold"
        android:paddingLeft="25dp"
        android:paddingRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/date_played"
        android:layout_below="@+id/gameScreenShoot"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/tvGameName"
        android:textSize="18dp"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@id/gameScreenShoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_toRightOf="@id/nameOfGame"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_media_play"/>

        <TextView
            android:id="@+id/scoreCount"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:paddingRight="1dp"
            android:layout_toLeftOf="@id/arrow"/>



    <TextView
        android:id="@+id/tvHighScore"
        android:textSize="15dp"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/your_highscore"
        android:layout_below="@+id/tvGameName"
        android:layout_toRightOf="@+id/gameScreenShoot"/>

    <TextView
        android:id="@+id/tvComment"
        android:textSize="10dp"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHighScore"
        android:layout_toRightOf="@+id/gameScreenShoot"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/tvEvaluation"
        android:textSize="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvComment"
        android:layout_toRightOf="@+id/gameScreenShoot"
        android:layout_alignParentRight="true" />

</RelativeLayout>