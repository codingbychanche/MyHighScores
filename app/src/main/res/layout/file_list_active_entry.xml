<?xml version="1.0" encoding="utf-8"?>

<!-- This is an active entry in our file list -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fileSymbol"
            android:paddingRight="10dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <ImageView
            android:id="@+id/locksymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/fileNname"
            android:layout_toRightOf="@id/fileSymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/lastmodified"
            android:layout_toRightOf="@id/fileSymbol"
            android:layout_below="@+id/fileNname"
            android:textColor="@color/colorSepparator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>
</LinearLayout>

