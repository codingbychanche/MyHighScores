<?xml version="1.0" encoding="utf-8"?>

<!-- This is the layout for one row in our game list list -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">


    <ImageView

        android:id="@+id/gameScreenShoot"
        android:paddingTop="10px"
        android:paddingBottom="5px"
        android:paddingLeft="5px"

        android:layout_width="300px"
        android:layout_height="200px"

        android:adjustViewBounds="true"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/tvGameName"
        android:textSize="25px"
        android:textStyle="bold"
        android:paddingLeft="10px"
        android:layout_toRightOf="@id/gameScreenShoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvNoEntryYet"
        android:textSize="20px"
        android:text="Keine EintrÃ¤ge......."
        android:paddingLeft="10px"
        android:paddingTop="10px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/your_highscore"
        android:layout_below="@+id/tvGameName"
        android:layout_toRightOf="@+id/gameScreenShoot"/>

</RelativeLayout>