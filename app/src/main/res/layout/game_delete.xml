<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.berthold.highscore.ScoreListPerGame">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/removeFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_menu_more"
        app:backgroundTint="@android:color/holo_blue_bright" />

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <TextView
            android:id="@+id/progressInfo"
            android:paddingLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:paddingBottom="10dp"
            android:layout_below="@+id/progressInfo"
            android:background="@color/colorSepparator">
        </View>

        <ListView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/death_game_list"
            android:layout_below="@id/separator"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dp"
            android:textSize="20sp"
            android:layout_weight="0.58"
            tools:ignore="ObsoleteLayoutParam" />


    </RelativeLayout>





</android.support.design.widget.CoordinatorLayout>
